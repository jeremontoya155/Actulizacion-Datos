<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= editar ? 'Editar Cliente' : 'Cargar Nuevo Cliente' %></title>
    <link rel="stylesheet" href="../formulario.css">
</head>
<body>
    <div class="container">
        <!-- Contenedor del mensaje -->
        <div class="message-container">
            <h1><%= editar ? 'Editar Cliente' : 'Cargar Nuevo Cliente' %></h1>
            <!-- <% if (message) { %>
                <p class="message"><%= message %></p>
            <% } %> -->
        </div>

        <!-- Mensaje en forma de pop-up -->
        <% if (message) { %>
            <div class="message-popup">
                <p class="message"><%= message %></p>
            </div>
        <% } %>

        <!-- Formulario -->
        <form action="/clients/guardar" method="POST" class="form-container">
            <input type="hidden" name="dni" value="<%= dni %>">
            <input type="hidden" name="editar" value="<%= editar %>">
        
            <div class="form-group">
                <label for="nombre">Nombre:</label>
                <input type="text" name="nombre" value="<%= cliente.nombre || '' %>" required <%= mostrarCamposNuevos ? 'disabled' : '' %>>
            </div>
        
            <div class="form-group">
                <label for="documento">Documento (DNI):</label>
                <input type="text" name="documento" value="<%= cliente.documento || dni %>" readonly <%= mostrarCamposNuevos ? 'disabled' : '' %>>
            </div>
        
            <div class="form-group">
                <label for="telefono">Teléfono:</label>
                <input type="text" name="telefono" value="<%= cliente.telefono || '' %>" required <%= mostrarCamposNuevos ? 'disabled' : '' %>>
            </div>
        
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" name="email" value="<%= cliente.email || '' %>" required <%= mostrarCamposNuevos ? 'disabled' : '' %>>
            </div>
        
            <div class="form-group">
                <label for="domicilio">Domicilio:</label>
                <input type="text" name="domicilio" value="<%= cliente.domicilio || '' %>" required>
            </div>
        
            <div class="form-group">
                <label for="sucursal">Sucursal:</label>
                <input type="text" name="sucursal" value="<%= cliente.sucursal || '' %>" required>
            </div>
        
            <% if (mostrarCamposNuevos) { %>
                <div class="form-group">
                    <label for="telefonoNuevo">Teléfono Nuevo:</label>
                    <input type="text" name="telefonoNuevo" value="<%= cliente.telefononuevo || '' %>">
                </div>
        
                <div class="form-group">
                    <label for="emailNuevo">Email Nuevo:</label>
                    <input type="email" name="emailNuevo" value="<%= cliente.emailnuevo || '' %>">
                </div>
            <% } %>
        
            <div class="form-actions preguntas">
                <button type="submit"><%= editar ? 'Actualizar' : 'Guardar' %></button>
                <a href="/clients/dashboard" class="btn-back">Volver al Dashboard</a>
            </div>
        </form>
        
    </div>
    <script>
        window.addEventListener('DOMContentLoaded', () => {
            const messagePopup = document.querySelector('.message-popup');
            const messageContainer = document.querySelector('.message-container');

            if (messagePopup) {
                // Display the message as a pop-up
                messagePopup.style.display = 'block';

                // After 7 seconds, hide the pop-up and move the message to the message-container
                setTimeout(() => {
                    messagePopup.style.display = 'none';
                    messageContainer.innerHTML += messagePopup.innerHTML;
                    messagePopup.remove();
                }, 4000);
            }
        });
    </script>
</body>
</html>
